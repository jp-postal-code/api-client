{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "module": "NodeNext",
    "noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["es2020", "DOM"],
    "types": ["node"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "tmp", "*.test.ts", "cypress/target"]
}
